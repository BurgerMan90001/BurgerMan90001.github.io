{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "server/src/routes",
    "server/src/config",
    "server/src/services",
    "server/src/models",
    "server/src/util"
, "client/src/stores", "client/src/routes", "client/src/controllers"  ],

  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
